<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Select Option"
            android:textColor="@color/color_dark_gray"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_48dp"
            android:tint="@android:color/black" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/rl_dialog_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="47.5"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_select_gallery"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_call_black_24dp"
                android:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_select_gallery"
                android:layout_centerHorizontal="true"
                android:text="Call Now"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp"

                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_dark_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_dialog_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="47.5"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_select_camera"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_message_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_select_camera"
                android:layout_centerHorizontal="true"
                android:text="Send SMS"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/_12sdp"

                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>