<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_previous_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/pickup_image"
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/style_circle_green"
                            android:backgroundTint="@color/colorAccent" />

                        <LinearLayout
                            android:id="@+id/start_location"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pickup Location"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/tv_pick_up_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_18sdp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:text="London Road London Road London Road London Road London Road London RoadLondon Road London Road London RoadLondon Road London Road London Road"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/line"

                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/container_ending"
                            android:layout_below="@+id/pickup_image">

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/holo_green_dark" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="@dimen/_7sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_below="@+id/line"

                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/holo_green_dark" />

                            <ImageView
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:background="@drawable/style_circle_green"
                                android:backgroundTint="@color/colorPrimary" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/container_ending"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/start_location"
                            android:layout_marginLeft="@dimen/_10sdp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Drop Off Location"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_drop_off_name"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_18sdp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:text="London Road"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>


                <View
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/color_line_vertical" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Date"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Opel Insignia"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Amount"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="$500.00"
                            android:textAlignment="center"
                            android:textSize="@dimen/_10sdp" />

                        <Button
                            android:id="@+id/view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/round_button_2_small"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:text="Get Invoice"
                            android:textAllCaps="false"
                            android:textColor="@color/white_color"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>