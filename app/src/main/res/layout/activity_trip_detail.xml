<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Move Invoice"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_16sdp"
                />

            <ImageView
                android:layout_centerVertical="true"

                android:id="@+id/share_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/Support"
                android:src="@drawable/share_2" />

            <TextView
                android:layout_centerVertical="true"

                android:id="@+id/Support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="Support"
                android:textSize="@dimen/_10sdp"
                android:textColor="#007AFF" />

        </RelativeLayout>

    <ScrollView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/color_dim_stars">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <TextView
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Move Reference"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/reference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="4387493"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/color_dark_gray"

                    />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Pick Up"
                    android:textColor="@color/color_dark_gray"

                    android:textSize="@dimen/_14sdp"
                    />

                <TextView
                    android:id="@+id/Pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Pickup"
                    android:textColor="@color/color_light_gray"


                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Dropoff"
                    android:textColor="@color/color_dark_gray"

                    android:textSize="@dimen/_14sdp"
                    />

                <TextView
                    android:id="@+id/Dropoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Dropoff"
                    android:textColor="@color/color_light_gray"


                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Status"
                    android:textColor="@color/color_dark_gray"

                    android:textSize="@dimen/_14sdp"
                    />

                <TextView
                    android:id="@+id/Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Status"
                    android:textColor="@color/color_light_gray"

                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_dark_gray"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Fare Breakdown"
                    android:textSize="@dimen/_14sdp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/_5sdp"

                android:layout_marginTop="@dimen/_5sdp"

                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_light_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:text="Service"
                        android:textColor="@color/color_light_gray"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Service"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"

                        android:text="0"
                        android:textColor="@color/color_dark_gray"

                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Duration"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Duration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:text="0"

                        android:textColor="@color/color_dark_gray"

                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Helpers"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Helpers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"

                        android:textColor="@color/color_dark_gray"
                        android:text="0"


                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Mileage"


                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_dark_gray"

                        android:text="0"


                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Subtotal"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Subtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_dark_gray"

                        android:text="0"

                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Insurance"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Insurance"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_dark_gray"

                        android:text="0"

                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Total"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/exact_amount"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_dark_gray"

                        android:text="0"


                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/color_light_gray" />


                <RelativeLayout
                    android:id="@+id/deposit_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"


                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"
                        android:text="Deposit Paid by card"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/depsoit_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_dark_gray"


                        android:text="0"

                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/balance_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"


                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/color_light_gray"


                        android:text="Balance paid by cash to driver"

                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/Balance_Due"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/color_dark_gray"

                        android:text="0"

                        android:textSize="@dimen/_12sdp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_5sdp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"

                        android:text="Total"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                       >

                        <TextView
                            android:id="@+id/paymnet_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Paid by card "
                            android:textColor="@color/color_light_gray"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:id="@+id/Total"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"
                            />

                    </LinearLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/estimated_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="If you used your van within your booked hours, the price reflects the minimum duration you have selected during booking.\nIf you used your van beyond your booked hours, the price reflects the minimum duration booked + price per minute after that."
                    android:textColor="@color/color_light_gray"

                    android:textSize="@dimen/_10sdp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>