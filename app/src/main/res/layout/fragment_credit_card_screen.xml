<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".activities.CreditCardScreen">

    <include
        android:id="@+id/toolbar"
        layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/gray_ios"
        android:orientation="vertical"

        android:padding="@dimen/_10sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:text="Add Card Info"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_16sdp" />


        <EditText
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border"
            android:hint="Card Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="16"
            android:padding="@dimen/_5sdp"

            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />


        <EditText
            android:id="@+id/cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border"
            android:hint="CVC"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="4"
            android:padding="@dimen/_5sdp"

            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/ic_down_arrow_c"
            android:hint="Expiry Month"

            android:padding="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/ic_down_arrow_c"
            android:hint="Expiry Year"

            android:padding="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />



        <Button
            android:id="@+id/buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/style_btn_black"
            android:text="Add Card"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>